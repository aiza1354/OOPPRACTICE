public class Car {
    public String make;
    public String model;
    public int year;
    public int speed;

    public Car (String make, String model, int year){
        this.make = make;
        this.model = model;
        this.year = year;
        this.speed = 0;
    System.out.println("this car is a " + this.make + " " + this.model);
    }

    public void accelerate(){
        this.speed += 10;
        System.out.println(this.make + " " + this.model + " is now at " + this.speed);
    }

    public void brake(){
        if (this.speed < 10){
            this.speed = 0;
            System.out.println("This car has stopped.");
        }
        else {
            this.speed -= 10;
            System.out.println("This car is now travelling at" + this.speed);
        }
    }



}

